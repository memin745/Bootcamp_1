@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col">
        <div class="container">
            <h2>Kayseri İlan Sayfasına Hoşgeldiniz</h2>
            <h3>Kayseri'ye dair aradığınız tüm fırsatlar bu sayfada.</h3>
        </div>
    </div>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        @if (item.isActive && item.isHome)
        {
            <div class="col-3">
                <div class="card">
                    <img src="~/img/@item.Image" class="card-img-top" style="height:400px">
                    <div class="card-body">
                        <h5 class="card-title">
                            @item.ProductName
                        </h5>
                        <p class="card-text">@item.Description</p>
                        <a class="btn btn-primary" asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                    </div>
                </div>
            </div>
        }
    }
</div>