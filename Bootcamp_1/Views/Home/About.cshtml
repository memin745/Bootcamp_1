@model List<Product>
@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Hakkımızda</h1>

    <div class="row">
        <div class="col-lg-6">
            <div class="card bg-info">
                <div class="card-body">
                    <h5 class="card-title">Misyon</h5>
                    <p class="card-text">To provide high-quality products and excellent service to our customers.</p>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card">
                <div class="card-body bg-light">
                    <h5 class="card-title">Vizyon</h5>
                    <p class="card-text">To provide high-quality products and excellent service to our customers.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="p-3">
        <div class="row">
            <div class="col-lg-6">
                <div class="card bg-info">
                    <div class="card-body">
                        <h5 class="card-title">Toplam İlan Sayısı</h5>
                        <p class="card-text">@Model.Count</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body bg-light">
                        <h5 class="card-title">Ortalama Fiyat</h5>
                        <p class="card-text">@Model.Average(p => p.Price)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
</div>


